<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title> Register </title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>

    <body>
        <main>
            <div class="container-fluid">
                <form action="#", method="POST">
                    {{ form.hidden_tag() }}
                    <div class="row"> {{ form.email.label }} {{ form.email() }} </div>
                    <div class="row"> {{ form.username.label }} {{ form.username() }} </div>
                    <div class="row"> {{ form.password.label }} {{ form.password() }} </div>
                    <div class="row"> {{ form.submit() }} </div>
                </form>
                <div class="row">  
                    <p> Already have an account? 
                        <a href="{{loginLink}}"> Log in </a> 
                    </p>
                </div>
            </div>
        </main>
    </body>

</html>